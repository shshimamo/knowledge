directive @isAuthenticated on FIELD_DEFINITION

### Results ###
type DeleteKnowledgeResult {
    id: ID!
    success: Boolean!
}

### Queries ###
type Query {
    currentUser: CurrentUser! @isAuthenticated
    user(id: ID!): User!
    knowledge(id: ID!): Knowledge!
}

### Input types ###
input NewUser {
  name: String!
}

input NewKnowledge {
  title: String!
  text: String!
  isPublic: Boolean!
}

input UpdateKnowledge {
  title: String!
  text: String!
  isPublic: Boolean!
}

### Mutations ###
type Mutation {
    createUser(input: NewUser!): User!
    createKnowledge(input: NewKnowledge): Knowledge!
    updateKnowledge(id: ID!, input: UpdateKnowledge): Knowledge!
    deleteKnowledge(id: ID!): DeleteKnowledgeResult!
}
