type CurrentUser {
    id: ID!
    authUserId: ID!
    name: String
    knowledge(id: ID!): Knowledge!
    knowledgeList(first: Int!): [Knowledge!]!
}

type User {
    id: ID!
    authUserId: ID!
    name: String
}

type Knowledge {
    id: ID!
    userId: ID!
    title: String!
    text: String!
    isPublic: Boolean!
    publishedAt: String!
    tags: [Tag!]!
}

type Tag {
    id: ID!
    name: String!
}
